{
  "name": "single-ec2",
  "version": "0.1.0",
  "bin": {
    "single-ec2": "bin/single-ec2.js"
  },
  "scripts": {
    "build": "yarn install && tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "clean": "scripts/clean",
    "deploy": "yarn build && STACKNAME=`jq -r .stackName configs/config.json` cdk deploy --no-rollback --outputs-file ./cdk-outputs.json --require-approval never && scripts/setssh",
    "prep": "yarn creds && yarn copykeys",
    "destroy": "yarn build && STACKNAME=`jq -r .stackName configs/config.json` cdk destroy --force",
    "setssh": "scripts/setssh",
    "ssh": "scripts/ssh",
    "stop": "scripts/ec2 stop",
    "start": "scripts/ec2 start",
    "status": "scripts/ec2 status",
    "creds": "scripts/creds",
    "copykeys": "scripts/copykeys"
  },
  "devDependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "2.140.0-alpha.0",
    "@types/aws-lambda": "8.10.134",
    "@types/jest": "29.5.12",
    "@types/js-yaml": "4.0.9",
    "@types/node": "20.11.20",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@typescript-eslint/parser": "^7.8.0",
    "aws-cdk": "2.140.0",
    "cdk-nag": "2.28.45",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "jest": "^29.7.0",
    "js-yaml": "4.1.0",
    "license-checker": "^25.0.1",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@alma-cdk/openapix": "0.0.50",
    "@aws-sdk/client-route-53": "3.635.0",
    "@aws-sdk/client-ssm": "3.621.0",
    "@redocly/cli": "1.15.0",
    "aws-cdk-lib": "2.140.0",
    "braces": "^3.0.3",
    "constructs": "10.3.0",
    "source-map-support": "0.5.21",
    "uuidv4": "6.2.13"
  }
}
